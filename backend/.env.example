# Blockchain Configuration
# Copy this file to .env and fill in your actual values

# Ethereum Network Configuration
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
INFURA_PROJECT_ID=your_infura_project_id_here
MNEMONIC="your twelve word mnemonic phrase here"
PRIVATE_KEY=your_private_key_here

# Smart Contract Addresses
MEDICAL_RECORDS_CONTRACT_ADDRESS=0x...

# Network Environment
NODE_ENV=development

# Legacy Blockchain API (if using)
BLOCKCHAIN_API_URL=http://localhost:3001/api/blockchain

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vmedithon
DB_NAME=vmedithon

# IPFS Configuration
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http

# Pinata Configuration (for IPFS pinning)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key
PINATA_JWT=your_pinata_jwt_token

# Server Configuration
PORT=3000
HOST=localhost

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
